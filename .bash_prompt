# Source git-prompt (installed by brew install git)
if [[ -e /usr/local/etc/bash_completion.d/git-prompt.sh ]]; then
  source /usr/local/etc/bash_completion.d/git-prompt.sh
elif [[ -e /etc/bash_completion.d/git-prompt ]]; then
  source /etc/bash_completion.d/git-prompt
fi

#
# Color codes:
#
# Cyan: \[$(tput setaf 6)\]
# Magenta: \[$(tput setaf 5)\]
# Reset color: \[$(tput sgr0)\]
#
# Set tab/window name: \[\033]0;\u@\h: \w\007\]
export PS1="\[\033]0;\u@\h: \w\007\]\[$(tput setaf 5)\]---\[$(tput sgr0)\] \u@\h(\[$(tput setaf 6)\]\w\[$(tput sgr0)\])\$(__git_ps1)\n\$ "
